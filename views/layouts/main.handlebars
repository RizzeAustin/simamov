    <script type="text/javascript">
        var socket = io.connect($(location).attr('host'));

        if (!socket) location.reload();

        $(document).ready(function () {
            
            $('#ui-view').on('focus', 'input.format-uang', function () {
                $(this).autoNumeric('init', { digitGroupSeparator: ',', decimalCharacter: '.', decimalPlacesOverride: '0' });
            })

            function GlobalAlert(message) {
                $.toast({
                    text: message,
                    textAlign: 'left',
                    hideAfter: 4000,
                    loader: false,
                    position: 'bottom-right'
                })
            }

            socket.on('connect', function (data) {
                socket.emit('join');
            });

            socket.on('login_required', function (data) {
                $.toast({
                    text: data,
                    textAlign: 'left',
                    hideAfter: 2000,
                    loader: false,
                    position: 'bottom-right',
                    allowToastClose: true,
                    afterHidden: function () {
                        window.location.replace(location.protocol + "//" + $(location).attr('host') + "/login");
                    }
                })
            });

            socket.removeListener('messages');
            socket.on('messages', function (data) {
                GlobalAlert(data)
            });

            //AUTO LOGOUT
            var idleTime = 29
            var loadIdle = new Date().getTime()

            //check idletime
            var idleInterval = setInterval(function(){
                idleDrecement()
                if (idleTime==-1){
                    clearInterval(idleInterval)
                    clearInterval(idleTimer)
                }
            }, 60 * 1000) // 1 minute

            //show time left
            var idleTimer = setInterval(function(){
                socket.emit('idleReset')
                $("#logOutTimer").html(showTimeLeft())
            }, 1000)

            // Zero the idle timer on event.
            $(this).mousemove(function () {
                resetIdle()
            })
            $(this).keypress(function () {
                resetIdle()
            })

            function idleDrecement(){
                idleTime = idleTime -1
                switch (idleTime){
                    case 9: 
                        GlobalAlert('Anda akan logout otomatis dalam 10 menit')
                        break
                    case 4: 
                        GlobalAlert('Anda akan logout otomatis dalam 5 menit')
                        break
                    case 0:
                        GlobalAlert('Anda akan logout otomatis dalam 1 menit')
                        break
                    case -1:
                        window.location.href = 'logout'
                        break
                }
            }
            function showTimeLeft(){
                var now = new Date().getTime()
                var timeleft = loadIdle-now
                var second = 60 + Math.floor((timeleft % (1000 * 60)) / 1000)
                return `${idleTime}:${second}`
            }
            function resetIdle(){
                idleTime = 29
            }

            socket.on('outRedirect', function(){
                window.location.href = 'logout'
            })

        }) //doc ready


