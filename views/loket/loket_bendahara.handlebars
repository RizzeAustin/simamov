                                            <p id="loketAdkSpj">{{data.fileSpj}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketSpp" class="col-md-2 col-form-label">SPP</label>
                                        <div class="col">
                                            <select name="loketSpp" id="loketSpp" class="form-select">
                                                {{#if_eq data.spp 'Sudah'}}
