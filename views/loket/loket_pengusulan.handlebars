    function formatUang(x) {
        if (x) {return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
        } else return ''
    }

    function reverseFormatUang(x) {
        if (x) {
            let p = x.replace(/\,/g,'')
            return parseInt(p)
        } else return ''
    }
    
