                let row = $("#penggunaanUnit tbody tr:last-child")
                let akun = "{{data.pok.kdakun}}"
                let takun = row.find("td:eq(1)").text().slice(0,6)
                let tdetail = row.find("td:eq(1)").text().slice(7)
