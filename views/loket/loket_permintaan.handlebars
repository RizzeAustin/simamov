<div class="animated fadeIn">
    <div class="card" id="new">
        <div class="card-header"><i class="icon-pencil"></i> E-LOKET</div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-content">
                        {{!-- form pengajuan user --}}
                        <div class="row col">
                            <h1><strong>- PERMINTAAN -</strong></h1>
                        </div>
                        <form id="loketForm" method="POST" action="loket/permintaanKirim" class="modal-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group row">
                                        <label for="jenisPermintaan" class="col-md-2 col-form-label">Jenis Permintaan</label>
                                        <div class="col">
                                            <select name="jenisPermintaan" id="jenisPermintaan" class="form-control" required>
                                                <option value="">Pilih Permintaan</option>
                                                <option value="Bahan">Belanja Bahan Percetakan/Penggandaan/Perlengkapan</option>
                                                <option value="Persediaan">Belanja Barang Persediaan ATK/ARK/Bahan Komputer</option>
                                                <option value="Pemeliharaan">Belanja Pemeliharaan</option>
                                                <option value="Modal">Belanja Modal</option>
                                                <option value="Sewa">Belanja Sewa</option>
                                                <option value="Jasa Konsultan">Belanja Jasa Konsultan</option>
                                                <option value="Jasa Profesi">Belanja Jasa Profesi</option>
                                                <option value="Honor">Honor yang Terkait dengan Output Kegiatan</option>
                                                <option value="JLN">Belanja Perjalanan Dinas Biasa/Dalam Kota</option>
                                                <option value="Fullday-Halfday">Paket Pertemuan Fullday/Halfday</option>
                                                <option value="Fullboard Dalam Kota">Paket Meeting/Fullboard Dalam Kota</option>
                                                <option value="Fullboard Luar Kota">Paket Meeting/Fullboard Luar Kota</option>
                                                <option value="Rapat di Luar Jam Kerja">Rapat di Dalam Kantor (Di Luar Jam Kantor Minimal 3 Jam)</option>
                                                <option value="Rapat Biasa">Rapat di Dalam Kantor (Di Dalam Jam Kerja)</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="unitEselonI" class="col-md-2 col-form-label">Unit Eselon I</label>
                                        <div class="col">
                                            <input type="text" name="unitEselonI" id="unitEselonI" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="penyelenggara" class="col-md-2 col-form-label">Penyelenggara</label>
                                        <div class="col">
                                            <input type="text" name="penyelenggara" id="penyelenggara" class="form-control" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="unitEselonII" class="col-md-2 col-form-label">Unit Eselon II</label>
                                        <div class="col">
                                            <input type="text" name="unitEselonII" id="unitEselonII" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="bagian" class="col-md-2 col-form-label">Bagian/Sub Direktorat</label>
                                        <div class="col">
                                            <input type="text" name="bagian" id="bagian" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketProgram" class="col ml-1 col-form-label">Program</label>
                                        <div class="col-md-10">
                                            <select name="loketProgram" id="loketProgram" class="form-select">
                                                <option>Pilih Program</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketKegiatan" class="col ml-1 col-form-label">Aktivitas</label>
                                        <div class="col-md-10">
                                            <select name="loketKegiatan" id="loketKegiatan" class="form-select">
                                                <option>Pilih Kegiatan</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketOutput" class="col ml-1 col-form-label">KRO</label>
                                        <div class="col-md-10">
                                            <select name="loketOutput" id="loketOutput" class="form-select">
                                                <option>Pilih Output</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketKomponen" class="col ml-1 col-form-label">Komponen</label>
                                        <div class="col-md-10">
                                            <select name="loketKomponen" id="loketKomponen" class="form-select">
                                                <option>Pilih Komponen</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketAkun" class="col ml-1 col-form-label">Akun</label>
                                        <div class="col-md-10">
                                            <select name="loketAkun" id="loketAkun" class="form-select">
                                                <option>Pilih Akun</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="loketDetailPok" class="col ml-1 col-form-label">Rincian dalam POK</label>
                                        <div class="col-md-10">
                                            <select name="loketDetailPok" id="loketDetailPok" class="form-select">
                                                <option>Pilih Detail</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="volume" class="col-md-2 col-form-label">Volume yang digunakan</label>
                                        <div class="col">
                                            <input type="text" name="volume" id="volume" class="form-control" disabled>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="resetFormUnit" type="reset" class="btn btn-warning">Reset</button>
                                        <button id="kirimFormUnit" type="submit" class="btn btn-success">Kirim</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var socket = io.connect($(location).attr('host'));
    //var socket = io()

    $(document).ready(function () {
        $('#jenisPermintaan').change(function(){
            var jp = $('#jenisPermintaan').val()
            
            if (jp == 'Fullday-Halfday' || jp == 'Fullboard Dalam Kota' || jp == 'Fullboard Luar Kota' || jp == 'Rapat di Luar Jam Kerja' || jp == 'Rapat Biasa'){
                $('#volume').prop('disabled', true)
            } else {
                $('#volume').prop('disabled', false)
            }

            if(jp == 'Fullboard Dalam Kota' || jp == 'Fullboard Luar Kota'){
                $('#penyelenggara').prop('disabled', false)
            } else {
                $('#penyelenggara').prop('disabled', true)
            }
        })


    })

    function generalAlert(message){
        $.toast({
            text: message,
            textAlign: 'left', 
            hideAfter: 5000,
            loader: false,
            position: 'bottom-right',
            stack: 2
        })
    }
</script>