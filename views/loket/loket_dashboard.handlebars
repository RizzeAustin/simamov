    function formatTanggal(date) {
        let dat = new Date(date)
        let monthNames = [
            "Januari", "Februari", "Maret",
            "April", "Mei", "Juni", "Juli",
            "Agustus", "September", "Oktober",
            "November", "Desember"
        ];
        let day = dat.getDate();
        let monthIndex = dat.getMonth();
        let year = dat.getFullYear();
        return day + ' ' + monthNames[monthIndex] + ' ' + year;
    };

